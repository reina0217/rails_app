<!-- app/views/home/index.html.erb -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <h1 class="card-title">ようこそ</h1>
          
          <% if current_user %>
            <p>ログイン中のユーザー: <%= current_user.email %></p>
          <% else %>
            <p>ログインしていません</p>
            <%= link_to "ログイン", login_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>